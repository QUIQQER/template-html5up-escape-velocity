<?xml version="1.0" encoding="UTF-8"?>

<quiqqer>

    <!-- project settings -->
    <project>
        <settings name="html5up_escape_velocity">
            <!-- config params -->
            <config>
                <section name="content">
                    <conf name="left_content_recursive">
                        <type><![CDATA[bool]]></type>
                        <defaultvalue>1</defaultvalue>
                    </conf>
                </section>

                <section name="contact">
                    <conf name="showcontact">
                        <type><![CDATA[bool]]></type>
                        <defaultvalue>1</defaultvalue>
                    </conf>
                    <conf name="mailTo">
                        <type><![CDATA[string]]></type>
                    </conf>
                </section>
            </config>

            <!-- config window -->
            <window>
                <categories>
                    <category name="html5up_escape_velocity">
                        <text>
                            <locale group="quiqqer/template-html5up-escape-velocity" var="settings.title" />
                        </text>

                        <settings title="content" name="content">
                            <title>
                                <locale
                                    group="quiqqer/template-html5up-escape-velocity"
                                    var="content.settings.title" />
                            </title>
                            <input conf="html5up_escape_velocity.content.left_content_recursive" type="checkbox">
                                <text>
                                    <locale
                                        group="quiqqer/template-html5up-escape-velocity"
                                        var="content.settings.left.content.text" />
                                </text>
                            </input>
                        </settings>

                        <settings title="contact" name="contact">
                            <title>
                                <locale
                                    group="quiqqer/template-html5up-escape-velocity"
                                    var="contact.settings.title" />
                            </title>
                            <input conf="html5up_escape_velocity.contact.showcontact" type="checkbox">
                                <text>
                                    <locale
                                        group="quiqqer/template-html5up-escape-velocity"
                                        var="content.contact.showcontact.text" />
                                </text>
                            </input>
                            <input conf="html5up_escape_velocity.contact.mailTo" type="text">
                                <text>
                                    <locale
                                        group="quiqqer/template-html5up-escape-velocity"
                                        var="content.contact.mailTo.text" />
                                </text>
                            </input>
                        </settings>
                    </category>
                </categories>
            </window>

        </settings>
    </project>

    <wysiwyg id="content">
        <css src="bin/css/style.css" />
        <css src="bin/css/style-desktop.css" />
        <css src="bin/css/sheet.css" />
    </wysiwyg>

</quiqqer>
